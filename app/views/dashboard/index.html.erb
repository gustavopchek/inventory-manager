<%= turbo_stream_from "inventory" %>

<section class="section has-background-grey-lighter">
  <div class="container">
    <h1 class="title">Inventory Dashboard</h1>
    <div class="columns">
      <div class="column">
        <table class="table">
          <thead>
            <tr>
              <th colspan="4">Last updates</th>
            </tr>
            <tr>
              <th>Received At</th>
              <th>Store</th>
              <th>Product</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody id="inventory">
          </tbody>
        </table>
      </div>
      <div class="column">
        <table class="table">
          <thead>
            <tr>
              <th colspan="4">
                Alerts
              </th>
            </tr>
          </thead>
          <tbody id="alerts">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
